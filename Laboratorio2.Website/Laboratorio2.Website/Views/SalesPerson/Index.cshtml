@model Laboratorio2.Website.Models.PersonAddressModel
@{
    ViewBag.Title = "Vendedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-bottom:20px !important" class="container">
    @using (Html.BeginForm())
    {
        <h2>Búsqueda de vendedores</h2>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Nombre vendedor" })
        @Html.TextBoxFor(x => x.City, new { @class = "form-control", placeholder = "Ciudad" })
        @Html.TextBoxFor(x => x.Province, new { @class = "form-control", placeholder = "Provincia" })
        @Html.TextBoxFor(x => x.Country, new { @class = "form-control", placeholder = "País" })
        <button class="btn btn-lg btn-primary btn-block" type="submit">Buscar</button>
    }
</div>
@if (Model.Items != null && Model.Items.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model.Items)
                {
                    <tr>
                        <td><a href="@Url.Action("Index", "Address", new { id = person.BusinessEntityID } )">@person.BusinessEntityID</a></td>
                        <td>@person.FirstName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}